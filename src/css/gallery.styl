.weui-gallery{
  .weui-page {
    width 100%
    height 100%
  }
  .weui-gallery_swiper {
    position: relative;
    height:100%
    width 100%
    overflow hidden
  }
  .swiper-container {
    width: 100%;
    height: 90%;
    margin-left: auto;
    margin-right: auto;
    &.gallery-top {
      height: 80%;
      width: 100%;
    }
    //position: absolute;
  }
  .swiper-slide {
    //background-size: cover;
    //background-position: center;
    //position: absolute;
    top: 0;
    right: 0;
    bottom: 60px;
    left: 0;
    background: center center no-repeat;
    background-size: contain;
  }

  .gallery-thumbs {
    &.swiper-container {
      height: 20%;
      box-sizing: border-box;
      padding: 10px 0;
    }
    .swiper-slide {
      width: 25%;
      height: 100%;
      opacity: 0.4;
    }
    .swiper-slide-active {
      opacity: 1;
    }
  }

}